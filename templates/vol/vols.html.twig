{# templates/vol/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}List of Flights{% endblock %}

{% block body %}
    <h1>List of Flights</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Destination City</th>
                <th>Departure Date</th>
                <th>Arrival Date</th>
                <th>Airport</th>
            </tr>
        </thead>
        <tbody>
            {% for vol in vols %}
                <tr>
                    <td>{{ vol.id }}</td>
                    <td>{{ vol.villeDestination }}</td>
                    <td>{{ vol.dateDeDépart ? vol.dateDeDépart|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ vol.dateDArrivée ? vol.dateDArrivée|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ vol.aeroport.nom }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No flights found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vol_add') }}">Add Flight</a>
{% endblock %}
